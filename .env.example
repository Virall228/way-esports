# MongoDB
MONGODB_URI=mongodb://localhost:27017/way-esports
# MONGO_URI= (alternative name supported)

# Redis (cache + queues)
REDIS_URL=redis://localhost:6379
# Set true to run backend without Redis in local/dev environments
REDIS_DISABLED=true

# Application
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_change_me

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token
BOOTSTRAP_ADMIN_TELEGRAM_ID=your_telegram_id
BOOTSTRAP_ADMIN_EMAIL=
PRIMARY_ADMIN_ONLY=false

# OAuth (optional)
GOOGLE_CLIENT_ID=
APPLE_CLIENT_ID=

# Monitoring / metrics
METRICS_API_KEY=
ALERT_ERROR_RATE_PERCENT=5
ALERT_EVENT_LOOP_LAG_MS=300
MONITORING_INTERVAL_MS=60000

# Backups
DB_BACKUP_DIR=./backups
DB_BACKUP_RETENTION_DAYS=7

# Email Service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Payments (Stripe)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
