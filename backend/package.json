{
  "name": "way-esports-backend",
  "version": "1.0.0",
  "description": "Backend for WAY-Esports",
  "main": "dist/src/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/models",
    "test:e2e": "jest tests/e2e",
    "test:performance": "jest tests/performance --runInBand --detectOpenHandles",
    "migrate": "ts-node src/scripts/run-migrations.ts up",
    "migrate:down": "ts-node src/scripts/run-migrations.ts down",
    "migrate:status": "ts-node src/scripts/run-migrations.ts status",
    "backup:db": "ts-node src/scripts/backup-db.ts",
    "load:test": "node ../scripts/load-test.js"
  },
  "dependencies": {
    "@types/express-validator": "^2.20.33",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.9.3",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.6",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.16.2",
    "node-telegram-bot-api": "^0.66.0",
    "multer": "^1.4.5-lts.1",
    "stripe": "^14.9.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/multer": "^1.4.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/ioredis": "^4.17.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.6",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@types/supertest": "^6.0.2",
    "commander": "^12.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
