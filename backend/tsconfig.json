{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "./src",
    "types": []
  },
  "include": [
    "src/**/*.ts",
    "routes/**/*.ts",
    "models/**/*.ts",
    "services/**/*.ts",
    "scripts/**/*.ts",
    "*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
