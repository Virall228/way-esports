# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB
# Для локальной разработки: mongodb://localhost:27017/way-esports
# Для Docker Compose: mongodb://mongo:27017/way-esports
# Для MongoDB Atlas: mongodb+srv://user:password@cluster.mongodb.net/way-esports?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/way-esports

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
BOOTSTRAP_ADMIN_TELEGRAM_ID=your_telegram_id_here
BOOTSTRAP_ADMIN_EMAIL=

# OAuth (optional)
GOOGLE_CLIENT_ID=
APPLE_CLIENT_ID=

# Monitoring / metrics
METRICS_API_KEY=
ALERT_ERROR_RATE_PERCENT=5
ALERT_EVENT_LOOP_LAG_MS=300
MONITORING_INTERVAL_MS=60000

# Backup snapshots
DB_BACKUP_DIR=./backups
DB_BACKUP_RETENTION_DAYS=7

# CORS Configuration
# Для локальной разработки: http://localhost:3000,http://localhost:5173
# Для одного домена: https://yourdomain.com
# Для Telegram Mini App: * (разрешает все домены)
CORS_ORIGIN=*

# Admin Configuration (опционально)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# Logging
LOG_LEVEL=info

# Email (optional, for password reset and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_SECURE=false

# Redis (опционально, для очередей)
REDIS_URL=redis://localhost:6379

# File Upload
MAX_FILE_SIZE=5242880
